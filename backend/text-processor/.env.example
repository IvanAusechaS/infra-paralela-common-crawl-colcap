# ==========================================
# Text Processor Service - Environment Variables
# News2Market Project
# ==========================================

# Service Configuration
SERVICE_NAME=text-processor
HOST=0.0.0.0
PORT=8002
ENV=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/newsdb
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10

# Worker Configuration
AUTO_START_WORKER=true
WORKER_CONCURRENCY=4
BATCH_SIZE=10

# Processing Configuration
MAX_CONTENT_LENGTH=10000
MIN_WORD_COUNT=50
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_ENTITY_EXTRACTION=true

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# Performance
UVICORN_WORKERS=1
UVICORN_TIMEOUT=60
